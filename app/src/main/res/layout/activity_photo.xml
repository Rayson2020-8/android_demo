<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity_photo">

    <TextView
        android:id="@+id/img_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="拍照设置"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/camera_select_tv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="摄像头"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <Spinner
            android:id="@+id/camera_select_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/camera"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/aspectRatio_setting_tv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="长宽比"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <Spinner
            android:id="@+id/aspectRatio_select_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/aspect"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rotation_setting"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="旋转角度"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <Spinner
            android:id="@+id/rotation_setting_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/rotation"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/save_result"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="是否保存结果:"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <RadioGroup
            android:id="@+id/save_result_rdg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textSize="20dp"
                android:layout_marginRight="20dp"/>/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:checked="true"
                android:textSize="20dp" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/model_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="模型设置"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/select_model"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="选择模型:"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <Spinner
            android:id="@+id/select_model_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/select_input_size"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="输入大小:"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <EditText
            android:id="@+id/model_input_ed"
            android:inputType="number"
            android:hint="320"
            android:text="320"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/model_conf"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="目标置信度："
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/conf_input_ed"
            android:inputType="numberDecimal"
            android:hint="0.5"
            android:text="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/model_nms"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="NMS阈值："
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/nms_input_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.2"
            android:inputType="numberDecimal"
            android:text="0.2" />
    </LinearLayout>

    <TextView
        android:id="@+id/inference_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="框架设置"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/select_core"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="核心模式:"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <Spinner
            android:id="@+id/select_core_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/core_mode"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/select_process"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="进程数量:"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <Spinner
            android:id="@+id/select_thread_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/thread_num" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/return_main"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="返回" />
        <Button
            android:id="@+id/run_detect"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="开始检测" />
    </LinearLayout>
</LinearLayout>